import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;
public class Solution {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int number = n;
        int sum =0;
        while(n != 0){
        sum = sum+ n % 10;
        n = n/10;
        }
        System.out.println("Bird said:"+number);
        System.out.println("Alice must go in path-"+sum);
    }
}
